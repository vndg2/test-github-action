pipeline {
    agent any

    stages {
        stage('Hello') {
            steps { echo 'Hello World!'}
        }
        stage('Clone') {
            steps {echo 'cloning...'}
        }
        stage('Build') {
            steps {echo 'building...'}
        }
        stage('Test') {
            steps {echo 'testing...'}
        }
    }

    post {
        success {
          echo "Build succeeded!"
        }
        failure {
          echo "Build failed!"
        }
    }

}